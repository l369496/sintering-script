{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sintering Script",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#methods" },
		{ "include": "#strings" },
		{ "include": "#comments" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "support.class.sintering-script",
					"match": "(?<=\\b)(布尔|整型|浮点|时间|文本|时刻|计时器|数学|输入|输出|轴|比例阀|仪表|温控开关|温控|油压|曲线|配置|弹窗|步骤|任务|状态)(?=(\\.|\\[|\\())"
				},
				{
					"name": "constant.numeric.sintering-script",
					"match": "(?<=\\b)([0-9]+(\\.[0-9]+)?(日|天|时|分|秒|毫秒|h|min|s|ms)?)(?=\\b)"
				},
				{
					"name": "keyword.operator.sintering-script",
					"match": "(?<=\\b)(且|或|非|加|减|乘|除|余|按位或|按位非|按位与|左移|右移|为|等|自加|自减|自乘|自除|自余|小于|小于等于|大于|大于等于|等于|不等于|和|(&&)|(\\|\\|)|\\+|\\-|\\*|/|%|=|\\+=|-=|\\*=|/=|%=|<|<=|>|>=|==|!=|!|~|&|(\\|)|\\^|<<|>>|\\.)(?=\\b)"
				},
				{
					"name": "constant.language.sintering-script",
					"match": "(?<=\\b)(真|假)(?=\\b)"
				},
				{
					"name": "keyword.control.sintering-script",
					"match": "(?<=\\b)(标签|打印|打开|关闭|设|跳到|延时|调用|当|如果|如果|则|否则如果|否则|结束如果|当|时|下轮|后继续|跳出|继续|继续循环|方法|创建方法|返回|方法结束|调用方法|输出)(?=\\b)"
				}]
		},
		"methods":{
			"patterns": [
				{
					"name": "variable.property.sintering-script",
					"match": "(?<=(\\b(布尔|整型|浮点|时间|文本|时刻|计时器|数学|输入|输出|轴|比例阀|仪表|温控开关|温控|油压|曲线|配置|弹窗|步骤|任务|状态)(\\.|\\[|\\())+)[^ ,\\(\\[\\f\\n\\r\\t\\v\\\"]+(?=\\b)"
				},
				{
					"name": "variable.property2.sintering-script",
					"match": "(?<=((\\]|\\))(\\.|\\[|\\())+)[^ ,\\(\\[\\f\\n\\r\\t\\v\\\"]+(?=\\b)"
				}]
		},
		"strings": {
			"name": "string.quoted.double.sintering-script",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sintering-script",
					"match": "\\\\."
				}
			]
		},
		"comments":{
			"patterns": [
				{ 
					"name": "comment.block.preprocessor.sintering-script",
					"match": "((^//)|( //)).*(?=\\n$)"
				}
			]
		}
	},
	"scopeName": "source.SinteringScript"
}